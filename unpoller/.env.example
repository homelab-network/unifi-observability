# Unpoller Configuration Example
# Copy this file to .env and update with your values
#
# SECURITY: Never commit .env with real credentials to git!

UP_PROMETHEUS_HTTP_LISTEN=0.0.0.0:9130
UP_PROMETHEUS_NAMESPACE=unpoller
UP_INFLUXDB_DISABLE=true
UP_POLLER_DEBUG=false
UP_UNIFI_DYNAMIC=false

# UniFi Controller Settings (API Key Auth - recommended for Cloud Gateway)
UP_UNIFI_CONTROLLER_0_URL=https://YOUR_UNIFI_IP
UP_UNIFI_CONTROLLER_0_API_KEY=YOUR_API_KEY_HERE
UP_UNIFI_CONTROLLER_0_SITE=default
UP_UNIFI_CONTROLLER_0_VERIFY_SSL=false

# Alternative: Username/Password Auth (for self-hosted controllers)
# UP_UNIFI_CONTROLLER_0_USER=unpoller
# UP_UNIFI_CONTROLLER_0_PASS=YOUR_PASSWORD

# Data Collection
UP_UNIFI_CONTROLLER_0_SAVE_SITES=true
UP_UNIFI_CONTROLLER_0_SAVE_IDS=true
UP_UNIFI_CONTROLLER_0_SAVE_EVENTS=true
UP_UNIFI_CONTROLLER_0_SAVE_ALARMS=true
UP_UNIFI_CONTROLLER_0_SAVE_ANOMALIES=true
UP_UNIFI_CONTROLLER_0_SAVE_DPI=true

TZ=America/Chicago
